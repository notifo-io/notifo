{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "incremental": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es6", "dom", "WebWorker"],
    "moduleResolution": "node",
    "module": "es2015",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5",
    "paths": {
      "@app*": [
        "src/app*"
      ],
      "@sdk*": [
        "src/sdk*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
